class BikeShop:
    def __init__(self, stock):
        self.stock = stock
    
    def displayBike(self):
        print("Total Bikes:", self.stock)

    def rentForBike(self, q):
        if q <= 0:
            print("Enter a positive value greater than zero")
        elif q > self.stock:
            print("Enter a value less than or equal to stock")
        else:
            self.stock -= q
            print("Total Price:", q * 100)
            print("Total Bikes left:", self.stock)


# Main program (menu outside the class)
obj = BikeShop(100)   # Start with 100 bikes in stock

while True:
    uc = int(input('''
    1 Display Stocks
    2 Rent a Bike
    3 Exit
    '''))

    if uc == 1:
        obj.displayBike()
    elif uc == 2:
        n = int(input("Enter the Qty: "))
        obj.rentForBike(n)
    elif uc == 3:
        print("Thank you for visiting BikeShop!")
        break
    else:
        print("Invalid Choice, try again.")
